
.card
._card
	display inline-flex
	align-items center
	justify-content center
	width 100px
	height 100px
	background $white
	border 5px solid black
	border-radius 10px
	color black
	margin 5px;
	position relative

	$transition = all 0s ease-in-out .1s, transform .2s ease-in-out, width .2s, height .2s, border-width .2s, border-radius .2s, margin .2s;

	transition $transition, top 0s, left 0s

	&.transition
		transition $transition, top .2s, left .2s

	&:before
		content attr(data-card)
		font-size 55px
		transition: font-size 0s linear .1s;

	&:after
		content "?"
		font-size 0px
		transform rotateY(180deg)
		transition: font-size 0s linear .1s;


	&[data-card$=♥]
	&[data-card$=♦]
		color red
		border-color red

	&[data-card="?"], &.hide
		background-color mix($white, $black)
		color mix($grey, $black)
		border-color mix($grey, $black)
		transform: rotateY(180deg);

		&:before
			font-size 0px

		&:after
			font-size 55px

	& div
		font-size 40px
		position absolute
		top calc(100% - 10px)
		left 50%
		color $white
		transform translate(-50%, 0)
		opacity 0
		transition opacity .2s

		.inHand.public&
			opacity 1

	&.inDeadwood
		opacity .4

	&.phantom
		opacity .1

	.discardTrail &
	&.inDiscardTrail
		width 30.303030303px
		height 30.303030303px
		border-width calc(5px * .303030303)
		border-radius calc(10px * .303030303)
		margin calc(5px * .303030303);

		&:before
			font-size calc(55px * .303030303)
			transition font-size .2s



.card
	opacity 0 !important

._card
	position absolute

.ginrummy
	display flex
	height: 100%;
	width 100%
	flex-direction column
	align-items center
	justify-content: space-around;

	& > div
		display flex
		align-items center
		justify-content center
		flex-wrap wrap

	& > .melds
		display flex
		flex-direction column
		align-items center
		color $grey
		font-size 25px;

	button
		height 60px
		width 200px
		background-color $black
		border 2.5px solid $grey
		border-radius 15px
		font-size 30px
		color $lightgrey
		cursor pointer
		transition border-color .2s, color .2s

		&:hover
			border-color $lightgrey
			color $white

		&.willKnock
		&.ok
			color $green
			border-color $green

	.sidebar
		display inline-flex
		flex-direction column
		justify-content space-between
		position absolute
		height 100%
		left 0

	.discardTrail
		display flex
		flex-direction column
		flex-wrap wrap
		height 100px
		width 0px

.clickable
	cursor pointer

.stats
	align-self flex-start
	display block !important
	color $lightgrey
	font-size 25px
	margin 20px

.fin
	color #bdc3c7
	font-size 50px
	text-align center
